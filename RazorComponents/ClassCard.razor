@using Domain_Models

<div class="card">
    <h2>@cls.ClassName</h2>
    <div class="students">
        <h3>Students:</h3>
        <ul>
            @foreach (var student in cls.Students)
            {
                <li>@student.FirstName @student.LastName</li>
            }
        </ul>
    </div>
    <div class="teachers">
        <h3>Teachers:</h3>
        <ul>
            @foreach (var teacher in cls.Teachers)
            {
                <li>@teacher.FirstName @teacher.LastName</li>
            }
        </ul>
    </div>
</div>


@code {
    [Parameter]
    public Class cls { get; set; }
}